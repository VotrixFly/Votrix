<Application x:Class="Votrix.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Votrix"
             xmlns:s="https://github.com/canton7/Stylet">
    <Application.Resources>
        <s:ApplicationLoader>
            
            <!--style启动-->
            <s:ApplicationLoader.Bootstrapper>
                <local:Bootstrapper />
            </s:ApplicationLoader.Bootstrapper>

            <!--主题颜色-->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.dark.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.deeppurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.deeppurple.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <!--PRIMARY--><!--
            <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#efefef"/>
            <SolidColorBrush x:Key="PrimaryHueLightForegroundBrush" Color="#424242"/>
            <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#bdbdbd"/>
            <SolidColorBrush x:Key="PrimaryHueMidForegroundBrush" Color="#424242"/>
            <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#000000"/>
            <SolidColorBrush x:Key="PrimaryHueDarkForegroundBrush" Color="#FFFFFF"/>
            --><!--ACCENT--><!--
            <SolidColorBrush x:Key="AttentionToActionBrush" Color="#69f0ae"/>
            <SolidColorBrush x:Key="SecondaryAccentBrush" Color="#673ab7"/>
            <SolidColorBrush x:Key="SecondaryAccentForegroundBrush" Color="#69f0ae"/>-->

            <!--PRIMARY-->
            <SolidColorBrush x:Key="AppColorLightBrush" Color="#484848"/>
            <SolidColorBrush x:Key="AppColorMidBrush" Color="#212121"/>
            <SolidColorBrush x:Key="AppColorDarkBrush" Color="#000000"/>

            <SolidColorBrush x:Key="AppColorLightControlBrush" Color="#9e9e9e"/>
            
            <SolidColorBrush x:Key="AppColorLightForegroundBrush" Color="#e0e0e0"/>
            <SolidColorBrush x:Key="AppColorMidForegroundBrush" Color="#f5f5f5"/>
            <SolidColorBrush x:Key="AppColorDarkForegroundBrush" Color="#FFFFFF"/>



        </s:ApplicationLoader>
    </Application.Resources>
</Application>